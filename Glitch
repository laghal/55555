class Glitchs
{
  boolean[] room;
  int krr;
  float unglitch;
  int NGRoom;
  
  Glitchs()
  {
    unglitch=0;
    krr = 30;
    NGRoom=0;
    room=new boolean[4];
    room[0]=false; //BAS GAUCHE//TRUEPARDEFAUT
    room[1]=false; //BAS DROITE
    room[2]=false;//HAUT GAUCHE
    room[3]=false;//HAUT DROITE
  }
  
  void update()
  {
    NGRoom=0;
    for(int i=0;i<4;i++)
    {
      if(room[i])
        NGRoom++;
    }
  }
}
