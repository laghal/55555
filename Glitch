class Glitchs
{
  boolean[] room;
  int krr;
  float unglitch;
  int NGRoom;
  
  Glitchs()
  {
    unglitch=0;
    krr = 30;
    NGRoom=4;
    room=new boolean[4];
    room[0]=true; //BAS GAUCHE
    room[1]=true; //BAS DROITE
    room[2]=true; //HAUT GAUCHE
    room[3]=true; //HAUT DROITE
  }
  
  void update()
  {
    NGRoom=0;
    for(int i=0;i<4;i++)
    {
      if(room[i])
        NGRoom++;
    }
  }
}
